// Comprehensive if/else demonstration
fn test_all_comparisons() -> u8 {
    const a: u8 = 10;
    const b: u8 = 20;
    
    if (a == b) {
        return 1;
    } else {
        if (a != b) {
            if (a < b) {
                if (a <= 10) {
                    return 42;
                } else {
                    return 2;
                }
            } else {
                if (a > b) {
                    return 3;
                } else {
                    if (a >= b) {
                        return 4;
                    } else {
                        return 5;
                    }
                }
            }
        } else {
            return 0;
        }
    }
}

fn test_arithmetic_in_conditions() -> u8 {
    const x: u8 = 5;
    const y: u8 = 3;
    
    if ((x + y) == 8) {
        return 100;
    } else {
        return 0;
    }
}

fn test_nested_if() -> u8 {
    const value: u8 = 15;
    
    if (value > 10) {
        if (value < 20) {
            if (value == 15) {
                return 255;
            } else {
                return 1;
            }
        } else {
            return 2;
        }
    } else {
        return 0;
    }
}